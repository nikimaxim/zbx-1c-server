<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>5.0</version>
    <date>2020-12-17T10:37:22Z</date>
    <groups>
        <group>
            <name>Templates Users</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template App 1C Service</template>
            <name>Template App 1C Service</name>
            <description>#&#13;
#    .VERSION&#13;
#    0.1&#13;
#&#13;
#    .DESCRIPTION&#13;
#    Author: Nikitin Maksim&#13;
#    Github: https://github.com/nikimaxim/zbx-1c-server.git&#13;
#    Note: Zabbix template for monitoring 1c server&#13;
#&#13;
#    .SUPPORTED&#13;
#    PowerShell: 2.0 and later&#13;
#    1C Server: 8.3 and later&#13;
#</description>
            <groups>
                <group>
                    <name>Templates Users</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>1C server</name>
                </application>
            </applications>
            <discovery_rules>
                <discovery_rule>
                    <name>1C cluster discovery</name>
                    <key>1c.discovery[lld,cl]</key>
                    <delay>1h</delay>
                    <item_prototypes>
                        <item_prototype>
                            <name>1C session for all DB hibernate {#CL.SERVER}:{#CL.PORT}</name>
                            <type>ZABBIX_ACTIVE</type>
                            <key>1c.session-all-hibernate[{#CL.ID}]</key>
                            <delay>1h</delay>
                            <applications>
                                <application>
                                    <name>1C server</name>
                                </application>
                            </applications>
                        </item_prototype>
                        <item_prototype>
                            <name>1C session for all DB {#CL.SERVER}:{#CL.PORT}</name>
                            <type>ZABBIX_ACTIVE</type>
                            <key>1c.session-all[{#CL.ID}]</key>
                            <delay>5m</delay>
                            <applications>
                                <application>
                                    <name>1C server</name>
                                </application>
                            </applications>
                        </item_prototype>
                        <item_prototype>
                            <name>1C working process {#CL.SERVER}:{#CL.PORT}</name>
                            <type>ZABBIX_ACTIVE</type>
                            <key>1c.working-process[{#CL.ID}]</key>
                            <delay>5m</delay>
                            <applications>
                                <application>
                                    <name>1C server</name>
                                </application>
                            </applications>
                        </item_prototype>
                    </item_prototypes>
                    <graph_prototypes>
                        <graph_prototype>
                            <name>1C session all DB {#CL.SERVER}:{#CL.PORT}</name>
                            <graph_items>
                                <graph_item>
                                    <color>1A7C11</color>
                                    <item>
                                        <host>Template App 1C Service</host>
                                        <key>1c.session-all-hibernate[{#CL.ID}]</key>
                                    </item>
                                </graph_item>
                                <graph_item>
                                    <sortorder>1</sortorder>
                                    <color>F63100</color>
                                    <item>
                                        <host>Template App 1C Service</host>
                                        <key>1c.session-all[{#CL.ID}]</key>
                                    </item>
                                </graph_item>
                            </graph_items>
                        </graph_prototype>
                        <graph_prototype>
                            <name>1C working process {#CL.SERVER}:{#CL.PORT}</name>
                            <graph_items>
                                <graph_item>
                                    <color>1A7C11</color>
                                    <item>
                                        <host>Template App 1C Service</host>
                                        <key>1c.working-process[{#CL.ID}]</key>
                                    </item>
                                </graph_item>
                            </graph_items>
                        </graph_prototype>
                    </graph_prototypes>
                </discovery_rule>
                <discovery_rule>
                    <name>1C cluster DB discovery</name>
                    <key>1c.discovery[lld,db]</key>
                    <delay>1h</delay>
                    <item_prototypes>
                        <item_prototype>
                            <name>1C backgroundJob {#CL.SERVER}:{#CL.PORT}:{#CLDB.DB}</name>
                            <type>ZABBIX_ACTIVE</type>
                            <key>1c.bgj[{#CL.ID},{#CLDB.ID}]</key>
                            <delay>60s</delay>
                            <applications>
                                <application>
                                    <name>1C server</name>
                                </application>
                            </applications>
                        </item_prototype>
                        <item_prototype>
                            <name>1C designer {#CL.SERVER}:{#CL.PORT}:{#CLDB.DB}</name>
                            <type>ZABBIX_ACTIVE</type>
                            <key>1c.designer-session[{#CL.ID},{#CLDB.ID}]</key>
                            <delay>60s</delay>
                            <applications>
                                <application>
                                    <name>1C server</name>
                                </application>
                            </applications>
                        </item_prototype>
                        <item_prototype>
                            <name>1C session {#CL.SERVER}:{#CL.PORT}:{#CLDB.DB}</name>
                            <type>ZABBIX_ACTIVE</type>
                            <key>1c.session[{#CL.ID},{#CLDB.ID}]</key>
                            <delay>60s</delay>
                            <applications>
                                <application>
                                    <name>1C server</name>
                                </application>
                            </applications>
                        </item_prototype>
                        <item_prototype>
                            <name>1C web client {#CL.SERVER}:{#CL.PORT}:{#CLDB.DB}</name>
                            <type>ZABBIX_ACTIVE</type>
                            <key>1c.web-session[{#CL.ID},{#CLDB.ID}]</key>
                            <delay>60s</delay>
                            <status>DISABLED</status>
                            <applications>
                                <application>
                                    <name>1C server</name>
                                </application>
                            </applications>
                        </item_prototype>
                    </item_prototypes>
                    <graph_prototypes>
                        <graph_prototype>
                            <name>1C session {#CL.SERVER}:{#CL.PORT}:{#CLDB.DB}</name>
                            <graph_items>
                                <graph_item>
                                    <color>FC6EA3</color>
                                    <item>
                                        <host>Template App 1C Service</host>
                                        <key>1c.bgj[{#CL.ID},{#CLDB.ID}]</key>
                                    </item>
                                </graph_item>
                                <graph_item>
                                    <sortorder>1</sortorder>
                                    <color>6C59DC</color>
                                    <item>
                                        <host>Template App 1C Service</host>
                                        <key>1c.designer-session[{#CL.ID},{#CLDB.ID}]</key>
                                    </item>
                                </graph_item>
                                <graph_item>
                                    <sortorder>2</sortorder>
                                    <color>AC8C14</color>
                                    <item>
                                        <host>Template App 1C Service</host>
                                        <key>1c.session[{#CL.ID},{#CLDB.ID}]</key>
                                    </item>
                                </graph_item>
                                <graph_item>
                                    <sortorder>3</sortorder>
                                    <color>611F27</color>
                                    <item>
                                        <host>Template App 1C Service</host>
                                        <key>1c.web-session[{#CL.ID},{#CLDB.ID}]</key>
                                    </item>
                                </graph_item>
                            </graph_items>
                        </graph_prototype>
                    </graph_prototypes>
                </discovery_rule>
                <discovery_rule>
                    <name>1C service discovery</name>
                    <key>1c.service.discovery</key>
                    <delay>1h</delay>
                    <filter>
                        <evaltype>AND</evaltype>
                        <conditions>
                            <condition>
                                <macro>{#SERVICE.NAME}</macro>
                                <value>1C:Enterprise</value>
                                <formulaid>A</formulaid>
                            </condition>
                        </conditions>
                    </filter>
                    <item_prototypes>
                        <item_prototype>
                            <name>1C service is running {#SERVICE.NAME}</name>
                            <type>ZABBIX_ACTIVE</type>
                            <key>service.info[{#SERVICE.NAME}]</key>
                            <delay>60s</delay>
                            <applications>
                                <application>
                                    <name>1C server</name>
                                </application>
                            </applications>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{last(#1)}&gt;0</expression>
                                    <name>1C service is down on {#SERVICE.NAME}</name>
                                    <priority>HIGH</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                </discovery_rule>
            </discovery_rules>
        </template>
    </templates>
</zabbix_export>
